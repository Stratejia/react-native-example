{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["src", ".eslintrc.js"],
  "exclude": ["node_modules"]
}
